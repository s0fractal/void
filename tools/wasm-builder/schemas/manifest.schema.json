{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chimera WASM Manifest",
  "description": "Manifest for WASM gene builds with CID and metadata",
  "type": "object",
  "required": ["version", "createdAt", "genes"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^chimera\\.v\\d+$",
      "description": "Manifest version (chimera.v1)"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of manifest creation"
    },
    "genes": {
      "type": "array",
      "description": "List of compiled genes",
      "items": {
        "type": "object",
        "required": ["name", "lang", "sha256", "cid", "size"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Gene name (function name)"
          },
          "lang": {
            "type": "string",
            "enum": ["tinygo", "rust", "assemblyscript", "zig"],
            "description": "Source language"
          },
          "entry": {
            "type": "string",
            "description": "Function signature"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA256 hash of WASM bytes"
          },
          "cid": {
            "type": "string",
            "pattern": "^baf[a-z2-7]+$",
            "description": "IPFS CIDv1 (base32)"
          },
          "size": {
            "type": "integer",
            "minimum": 0,
            "description": "WASM file size in bytes"
          },
          "car": {
            "type": "string",
            "description": "CAR filename"
          },
          "phi": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "description": "Protein hash vector (semantic fingerprint)"
          },
          "astHash": {
            "type": "string",
            "description": "AST hash of source code"
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Build labels (e.g., deterministic)"
          },
          "buildTime": {
            "type": "integer",
            "description": "Build time in milliseconds"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "description": "Build metadata",
      "properties": {
        "builder": {
          "type": "string",
          "description": "Builder tool name"
        },
        "deterministic": {
          "type": "boolean",
          "description": "Whether deterministic build was used"
        },
        "canary": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Canary percentage used"
        }
      }
    }
  }
}