      if (recipe.prayers) console.log(`ðŸ™ Saying ${recipe.prayers} prayers...`);
      
      return {
        type: complexity,
        strength: recipe.beans * 50,
        motivation: '+' + (recipe.beans * 20) + '%'
      };
    }

