# Void Configuration
# Copy this file to .env and adjust values as needed

# Core Features (default: disabled for safety)
CHIMERA_ENABLED=0
WASM_EXEC_ENABLED=0
PROTEIN_HASH_ENABLED=0

# Canary Deployment
CHIMERA_CANARY=0.1  # 10% of traffic for gradual rollout

# Security Policies
WASM_SANDBOX_MODE=strict
WASM_MAX_MEMORY=256MB
WASM_EXECUTION_TIMEOUT=30000  # 30 seconds

# Network Policies (deny by default)
WASM_ALLOW_NETWORK=0
WASM_ALLOWED_HOSTS=  # comma-separated list if network enabled

# Storage Policies
WASM_ALLOW_DISK=0
WASM_ALLOWED_PATHS=  # comma-separated list if disk enabled

# IPFS Configuration
IPFS_NODE_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://cloudflare-ipfs.com/ipfs/
IPFS_PINNING_ENABLED=0

# Metrics & Observability
PROMETHEUS_ENABLED=0
PROMETHEUS_ENDPOINT=/metrics
OTEL_TRACES_ENABLED=0
OTEL_ENDPOINT=http://localhost:4317

# Rate Limiting
WASM_RPS_LIMIT=100
WASM_BURST_LIMIT=200

# Development Mode
DEV_MODE=0
DRY_RUN_MODE=0
DEBUG_CHIMERA=0
DEBUG_WASM=0
DEBUG_PROTEIN=0

# Relay Connection
RELAY_URL=ws://localhost:8787/ws
RELAY_RECONNECT_INTERVAL=5000

# LiveKit (for First Node)
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# Feature Flags (for progressive rollout)
FF_CHIMERA_UI=0
FF_PROTEIN_SEARCH=0
FF_WASM_EXECUTOR=0
FF_FIRST_NODE=0